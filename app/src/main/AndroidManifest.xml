<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.jojora.camed">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.Camed"
        tools:targetApi="31">
        <activity
            android:name=".activity.CadastroDeEnderecoActivity"
            android:exported="false" />
        <activity
            android:name=".activity.SobreActivity"
            android:exported="false"
            android:theme="@style/Theme.CamedNoActionBar" />
        <activity
            android:name=".activity.PerfilActivity"
            android:exported="false" />
        <activity
            android:name=".activity.MudarPerfilActivity"
            android:exported="false" />
        <activity
            android:name=".activity.MedicamentosActivity"
            android:exported="false"
            android:theme="@style/Theme.CamedNoActionBar" />
        <activity
            android:name=".activity.CadastroActivity"
            android:exported="false" />
        <activity
            android:name=".activity.HomeActivity"
            android:exported="false"
            android:theme="@style/Theme.CamedNoActionBar" />
        <activity
            android:name=".activity.MainActivity"
            android:exported="true"
            android:theme="@android:style/Theme.NoDisplay">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.ContatoActivity"
            android:exported="false"
            android:theme="@style/Theme.CamedNoActionBar" />
        <activity
            android:name=".activity.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.CamedNoActionBar">
        </activity>
    </application>

</manifest>